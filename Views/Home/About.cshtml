@model PcRepaire.Models.ViewModels.Statistic

<h1>
    Statistic office
</h1>

<h4>
    Repaires
</h4>
<table class="table text-center">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Count repaires
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StatRepaires)
        {
            <tr>
                <td>
                    <label>@item.Date.ToShortDateString()</label>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
            </tr>
        }
    </tbody>
</table>

    <h4>
        Workers
    </h4>
    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    Worker
                </th>
                <th>
                    Count repaires
                </th>
                <th>
                    Count softwares
                </th>
                <th>
                    Count hardwares
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StatWorkers)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountRepaires)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountSoft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountHard)
                </td>
            </tr>
            }
        </tbody>
    </table>
