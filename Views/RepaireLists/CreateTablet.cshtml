@model PcRepaire.Models.RepaireTablets

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RepaireLists</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTablet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TabletId" class="control-label"></label>
                <select asp-for="TabletId" class ="form-control" asp-items="ViewBag.Equipment "></select>
            </div>
            <div class="form-group">
                <label asp-for="RepaireManId" class="control-label"></label>
                <select asp-for="RepaireManId"  class ="form-control" asp-items="ViewBag.RepaireMan"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateRepaire" class="control-label"></label>
                <input asp-for="DateRepaire" type="date" value="@DateTime.Today" class="form-control"/>
                <span asp-validation-for="DateRepaire" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SoftWare" /> @Html.DisplayNameFor(model => model.SoftWare)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
