@page
@model LoginModel


<div class="row">
    <div class="text-block" style="max-width: 360px; margin: 0 auto;">
            <form method="post">
                <h3>Авторизация</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div>
                    <input asp-for="Input.Name" class="form-control" placeholder="Фамилия"/>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div >
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Пароль" width="200"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group center-block">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group center-block">
                    <button type="submit" class="btn btn-default">Войти</button>
                </div>
            </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
